            <button id="upload-cv" onclick="showUpdateForm('.update-cv-form')">Upload new CV</button>
            <button id="change password" onclick="showUpdateForm('.update-password-form')">Change password</button>

            <form action="/profile" method="post" class="update-cv-form" style="display: none;"> 
                <label for="cv">Upload new CV</label>
                <input type="file" name="cv" id="cv" accept="application/pdf">
                <button type="submit" value="save">Save</button> <br>
            </form>

            <form action="/profile" method="post" class="update-password-form" style="display: none;"> 
                <label for="password">Enter new password</label>
                <input type="text" name="password" id="password">
                <button type="submit" value="save">Save</button> <br>
            </form>

