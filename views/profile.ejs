<body>
    <section class = "container1">
        <h3>&#x1F4BC; AppJob</h3>
        <div class="user-profile"><h3 class="fullname"></h3><a href="/profile" class="link-profile"></a><a href="/logout" class="link-profile"> Logout</a></div>
    </section>
    <div class="title"><h2>My Profile</h2></div>
    <section class="container2 profile">
        <div class="photo">
